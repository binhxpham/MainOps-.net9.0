@model MainOps.Models.WellType

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>WellType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectId" class="control-label"></label>
                <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId" onchange="FillItems();"><option value="">@SharedLocalizer.GetLocalizedHtmlString("Select Project")</option></select>
            </div>
            <div class="form-group">
                <label asp-for="ItemTypeId" class="control-label"></label>
                <select asp-for="ItemTypeId" class="form-control"><option value="">@SharedLocalizer.GetLocalizedHtmlString("Select linked Drilling BoQ Item")</option></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
        function FillItems() {
                var ProjectId = $('#ProjectId').val();
                var url = '@Url.Action("GetItemsProject", "ItemTypes")';
                $.ajax({
                type: 'GET',
                url: url,
                dataType: 'json',
                data: {
                'theId': ProjectId,
                'type' : "drill"
                },
                success: function (data) {
                    var s = '<option value="">Please Select</option>';
                    for (var prop in data) {
                        s += '<option value="' + data[prop]["id"] + '">' + data[prop]["item_Type"] + '</option>' ;
                    }
                    $("#ItemTypeId").html(s);
                        document.getElementById("ItemTypeId").style.width="100%" ;
                  
                    }
                  });
    }
                
</script>
}
    
