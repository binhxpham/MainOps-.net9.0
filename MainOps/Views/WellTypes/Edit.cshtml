@model MainOps.Models.WellType

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>WellType</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectId" class="control-label"></label>
                <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId" onchange="FillItems();"></select>
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemTypeId" class="control-label"></label>
                <select asp-for="ItemTypeId" class="form-control" asp-items="ViewBag.ItemTypeId"><option value="">@SharedLocalizer.GetLocalizedHtmlString("Select linked Drilling BoQ Item")</option></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script>
        function FillItems() {
            var ProjectId = $('#ProjectId').val();
            var ItemTypeId = $('#ItemTypeId').val();
                var url = '@Url.Action("GetItemsProject", "ItemTypes")';
                $.ajax({
                type: 'GET',
                url: url,
                dataType: 'json',
                data: {
                'theId': ProjectId,
                'type' : "drill"
                },
                success: function (data) {
                    var s = '<option value="">Select linked Drilling BoQ Item</option>';
                    for (var prop in data) {
                        s += '<option value="' + data[prop][" id"] + '">' + data[prop]["item_Type"] + '</option>' ;
                    }
                    $("#ItemTypeId").html(s);
                        document.getElementById("ItemTypeId").style.width="100%" ;
                    var x = document.getElementById("ItemTypeId");
                    var i;
                    for (i = 0; i < x.length; i++) {
                        if (x.options[i].value == ItemTypeId) {
                            x.options[i].selected = true;
                        }
                    }
                    }

                  });
                  }

</script>
}