@model MainOps.Models.ReportClasses.Well_Development

@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("Well Development");
}

<h2>@SharedLocalizer.GetLocalizedHtmlString("Well Development")</h2>

<hr />
<div class="row">
    <div class="col-xs-8">
        <form asp-action="Well_Development" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table>
                <tr>
                    <td colspan="2">
                        <label asp-for="ProjectId" class="control-label"></label>
                    </td>
                    <td colspan="2">
                        <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <label asp-for="ProjectLocation" class="control-label"></label>
                    </td>
                    <td colspan="2">
                        <input asp-for="ProjectLocation" class="form-control" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <label asp-for="WellName" class="control-label"></label>
                    </td>
                    <td colspan="2">
                        <input asp-for="WellName" class="form-control" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <label asp-for="VersionNr" class="control-label"></label>
                    </td>
                    <td colspan="2">
                        <input asp-for="VersionNr" class="form-control" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <label asp-for="RevisionReason" class="control-label"></label>
                    </td>
                    <td colspan="2">
                        <input asp-for="RevisionReason" class="form-control" />
                    </td>
                </tr>
                <tr><td colspan="4"></td></tr>
                <tr>
                    <td colspan="2"><label asp-for="Scetch_path" class="control-label"></label></td>
                    <td colspan="2"><input type="file" name="files" accept=".jpg,.jpeg,.png,.gif" /></td>
                </tr>
                <tr><td colspan="4"></td></tr>
                <tr>
                    <td>@SharedLocalizer.GetLocalizedHtmlString("")</td>
                    <td>@SharedLocalizer.GetLocalizedHtmlString("Before")</td>
                    <td>@SharedLocalizer.GetLocalizedHtmlString("After")</td>
                    <td>@SharedLocalizer.GetLocalizedHtmlString("Pass/Fail")</td>
                </tr>
                <tr>
                    <td><label asp-for="resting_water_level_before" class="control-label"></label></td>
                    <td><input asp-for="resting_water_level_before" class="form-control" /><span asp-validation-for="resting_water_level_before" class="text-danger"></span></td>
                    <td><input asp-for="resting_water_level_after" class="form-control" /><span asp-validation-for="resting_water_level_after" class="text-danger"></span></td>
                    <td style="text-align:center;">
                        <div class="checkbox">
                            <label>
                                <input asp-for="resting_water_level_pass" />
                            </label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="Base_depth_before" class="control-label"></label></td>
                    <td><input asp-for="Base_depth_before" class="form-control" /><span asp-validation-for="Base_depth_before" class="text-danger"></span></td>
                    <td><input asp-for="Base_depth_after" class="form-control" /><span asp-validation-for="Base_depth_after" class="text-danger"></span></td>
                    <td style="text-align:center;">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Base_depth_pass" />
                            </label>
                        </div>
                    </td>
                </tr>

                <tr>
                    <td><label asp-for="Colour_before" class="control-label"></label></td>
                    <td><input asp-for="Colour_before" class="form-control" /></td>
                    <td><input asp-for="Colour_after" class="form-control" /></td>
                    <td style="text-align:center;">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Colour_pass" />
                            </label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="Well_clearing_before" class="control-label"></label></td>
                    <td><input asp-for="Well_clearing_before" class="form-control" /></td>
                    <td><input asp-for="Well_clearing_after" class="form-control" /></td>
                    <td style="text-align:center;">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Well_clearing_pass" />
                            </label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="Test_result_before" class="control-label"></label></td>
                    <td><input asp-for="Test_result_before" class="form-control" /></td>
                    <td><input asp-for="Test_result_after" class="form-control" /></td>
                    <td style="text-align:center;">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Test_result_pass" />
                            </label>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="Duration" class="control-label"></label></td>
                    <td colspan="3"><input asp-for="Duration" style="width:100%;height:36px;" /><span asp-validation-for="Duration" class="text-danger"></span></td>
                </tr>
                <tr>
                    <td><label asp-for="method" class="control-label"></label></td>
                    <td colspan="3"><input asp-for="method" class="form-control" /></td>
                </tr>
                <tr>
                    <td colspan="4"><label asp-for="Notes" class="control-label"></label></td>
                </tr>
                <tr rowspan="20">
                    <td colspan="4">
                        <textarea rows="8" cols="64" class="form-control" asp-for="Notes"></textarea>
                    </td>
                </tr>
                <tr>
                    <td colspan="2"><label asp-for="Name"></label></td>
                    <td colspan="2"><input asp-for="Name" style="width:100%;height:36px;" /></td>
                </tr>
                <tr>
                    <td colspan="2"><label asp-for="Date_Done"></label></td>
                    <td colspan="2"><input type="datetime" class="date-picker" value="@DateTime.Now.ToString("yyyy-MM-dd")" asp-for="Date_Done" style="width:100%;height:36px;" /></td>
                </tr>
            </table>
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer.GetLocalizedHtmlString("Add Report")" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery-ui-timepicker-addon.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(function () {
                $(".date-picker").datepicker({
                    changeMonth: true,
                    changeYear: true,
                    yearRange: "-100:+0",
                    dateFormat: "dd-MM-yy",
                    controlType: 'select'

                });
                $('.date-picker').datepicker("setDate", new Date());

            });
        });

    </script>
}