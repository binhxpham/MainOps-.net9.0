            <td><label>@SharedLocalizer.GetLocalizedHtmlString("User")</label></td>
            <!-- <td>@Html.DropDownList("who", ViewData["userid"] as SelectList, @SharedLocalizer.GetLocalizedHtmlString("All"), new { @id = "who", @name = "who", @style = "width:200px;" })</td> -->
            <td><input name="who" id="who" type="text" placeholder="search employee" /></td>
        </tr>
        <tr>
            <td colspan="2"><button type="button" onclick="DisplayKS();">@SharedLocalizer.GetLocalizedHtmlString("Get Reports")</button></td>
        </tr>
    </table>
<div id="data"></div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery-ui-timepicker-addon.min.js"></script>
    <script type="text/javascript">
    $(document).ready(function () {
            $(function () {
                $(".date-picker").datepicker({
                    changeMonth: true,
                    changeYear: true,
                    yearRange: "-100:+100",
                    dateFormat: 'dd-M-yy',
                    controlType: 'select',
                });
                $("#startdate").datepicker("setDate", "01-Jan-2015");
                $("#enddate").datepicker("setDate", "31-Dec-2099");

            });
    }
        
    );
        
        function DisplayKS() {
            var startdate = $('#startdate').datepicker('getDate').toISOString();
            var enddate = $('#enddate').datepicker('getDate').toISOString();
            $.ajax({
                type: 'post',
                url: '@Url.Action("GetDocuments","Documentation")',
                data: {
                    'id': $("#kstypes").val(),
                    'startdate': startdate,
                    'enddate': enddate,
                    'who': $("#who").val()
                },
                success: function (output) {
                    $('#data').html(output);
                },
                error: function () {
                    alert("error");
                }
            });
        }

    </script>
}
