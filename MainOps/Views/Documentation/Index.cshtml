</table>
    <table>
        <tr>
            <td><label style="width:200px;">@SharedLocalizer.GetLocalizedHtmlString("Search Project")</label></td>
            <td>@Html.DropDownList("MySkills", (IEnumerable<SelectListItem>)ViewData["MySkills"], new { @id = "kstypes",@style="width:200px;" })</td>
        </tr>
        <tr>
            <td><label>@SharedLocalizer.GetLocalizedHtmlString("Search Start date")</label></td>
            <td><input type="datetime" class="date-picker" name="startdate" id="startdate" /></td>
        </tr>
        <tr>
            <td><label>@SharedLocalizer.GetLocalizedHtmlString("Search End date")</label></td>
            <td><input type="datetime" class="date-picker" name="enddate" id="enddate" /></td>
        </tr>
