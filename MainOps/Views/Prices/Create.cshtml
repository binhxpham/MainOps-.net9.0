@model MainOps.Models.WTPClasses.MainClasses.Price


@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("Create");
}

<h2>@SharedLocalizer.GetLocalizedHtmlString("Create")</h2>

<h4>@SharedLocalizer.GetLocalizedHtmlString("Price")</h4>
<div class="row">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table>
            <tr>
                <td>
                    <label asp-for="name" class="control-label"></label>
                </td>
                <td>
                    <input asp-for="name" class="form-control" style="min-width:300px;max-width:300px;" />
                    <span asp-validation-for="name" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.EkdT.category)
                </td>
                <td>
                    @Html.DropDownListFor(model => model.EkdTid, ViewData["categories"] as SelectList, SharedLocalizer.GetLocalizedHtmlString("-- Please Select --"), new { @class = "form-control", style = "min-width:300px; max-width:300px;" })
                    @Html.ValidationMessageFor(model => model.EkdTid, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="size" class="control-label"></label>
                </td>
                <td>
                    <input asp-for="size" class="form-control" style="min-width:300px;max-width:300px;" />
                    <span asp-validation-for="size" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.unit.the_unit)
                </td>
                <td>
                    @Html.DropDownListFor(model => model.unitid, ViewData["units"] as SelectList, SharedLocalizer.GetLocalizedHtmlString("-- Please Select --"), new { @class = "form-control", style = "min-width:300px; max-width:300px;" })
                    @Html.ValidationMessageFor(model => model.unitid, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="price" class="control-label"></label>
                </td>
                <td>
                    <input asp-for="price" class="form-control" style="min-width:300px;max-width:300px;" />
                    <span asp-validation-for="price" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.unit_p.the_unit)
                </td>
                <td>
                    @Html.DropDownListFor(model => model.unit_pid, ViewData["units"] as SelectList, SharedLocalizer.GetLocalizedHtmlString("-- Please Select --"), new { @class = "form-control", style = "min-width:300px; max-width:300px;" })
                    @Html.ValidationMessageFor(model => model.unit_pid, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="rent" class="control-label"></label>
                </td>
                <td>
                    <input asp-for="rent" class="form-control" style="min-width:300px;max-width:300px;" />
                    <span asp-validation-for="rent" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.unit_r.the_unit)
                </td>
                <td>
                    @Html.DropDownListFor(model => model.unit_rid, ViewData["units"] as SelectList, SharedLocalizer.GetLocalizedHtmlString("-- Please Select --"), new { @class = "form-control", style = "min-width:300px; max-width:300px;" })
                    @Html.ValidationMessageFor(model => model.unit_rid, "", new { @class = "text-danger" })
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.division.Name)
                </td>
                <td>
                    @Html.DropDownListFor(model => model.divisionid, ViewData["divisions"] as SelectList, SharedLocalizer.GetLocalizedHtmlString("-- Please Select --"), new { @class = "form-control", style = "min-width:300px; max-width:300px;" })
                    @Html.ValidationMessageFor(model => model.divisionid, "", new { @class = "text-danger" })
                </td>
            </tr>

        </table>
        <div class="form-group">
            <input type="submit" value="@SharedLocalizer.GetLocalizedHtmlString("Create")" class="btn btn-hoelscher" style="min-width:80px;max-width:80px;"/>
        </div>
        <div>
            <a asp-action="Index">@Localizer["Back to List"]</a>
        </div>
    </form>
</div>



