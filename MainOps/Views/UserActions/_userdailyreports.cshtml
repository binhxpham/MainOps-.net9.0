@model IEnumerable<MainOps.Models.ReportClasses.Daily_Report_2>

<table style="width:100%;">
    @foreach (var item in Model)
    {
    <tr>
        @if (item.SubProjectId != null)
        {
            <td>
                @String.Format("{0:yyyy-MM-dd}", item.Report_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubProject.Name)
            </td>
            <td>
                <form asp-action="Daily_Report_2_DetailsPdf" asp-controller="TrackItems" asp-route-id="@item.Id" method="get" target="_blank">
                    <button class="btn-hoelscher">@SharedLocalizer.GetLocalizedHtmlString("PDF")</button>
                </form>
            </td>
        }
        else
        {
            <td>
                @String.Format("{0:yyyy-MM-dd}", item.Report_Date)
            </td>
            <td colspan="2">
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                <form asp-action="Daily_Report_2_DetailsPdf" asp-controller="TrackItems" asp-route-id="@item.Id" method="get" target="_blank">
                    <button class="btn-hoelscher">@SharedLocalizer.GetLocalizedHtmlString("PDF")</button>
                </form>
            </td>
        }

    </tr>
    }

</table>