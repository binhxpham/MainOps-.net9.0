@model IEnumerable<MainOps.Models.LoggerChange>


<h2>@SharedLocalizer.GetLocalizedHtmlString("Index")</h2>

<table>
    <tr>
        <td>
            <form asp-action="Create" method="get">
                <button class="btn-hoelscher" type="submit">@SharedLocalizer.GetLocalizedHtmlString("Create")</button>
            </form>
        </td>
        <td>
            <div class="form-group">
                <div class="ui-widget">
                    <form asp-controller="LoggerChanges" asp-action="Combsearch">
                        <input id="search" type="text" name="searchstring" placeholder="@SharedLocalizer.GetLocalizedHtmlString("search..")" data-url="@Url.Action("AutoComplete","Meas")" />
                        <button type="submit" class="btn-hoelscher">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </form>
                </div>
            </div>
        </td>
    </tr>
</table>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Logger)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeasPoint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoggerAdded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoggerRemoved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.When)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Logger.LoggerNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeasPoint.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoggerAdded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoggerRemoved)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.When)
            </td>
            <td>
                <form asp-action="Edit" asp-controller="LoggerChanges" asp-route-id="@item.Id" method="get"><button class="btn-hoelscher" type="submit">@SharedLocalizer.GetLocalizedHtmlString("Edit")</button></form>
                <form asp-action="Details" asp-controller="LoggerChanges" asp-route-id="@item.Id" method="get"><button class="btn-hoelscher" type="submit">@SharedLocalizer.GetLocalizedHtmlString("Details")</button></form>
                <form asp-action="Delete" asp-controller="LoggerChanges" asp-route-id="@item.Id" method="get"><button class="btn-hoelscher" type="submit">@SharedLocalizer.GetLocalizedHtmlString("Delete")</button></form>
            </td>
        </tr>
        }
    </tbody>
</table>
