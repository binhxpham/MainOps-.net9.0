@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Reset password confirmation"];
}

<h2>@ViewData["Title"]</h2>
<p>
    @SharedLocalizer.GetLocalizedHtmlString("Your password has been reset. Please click") <a asp-action="Login">@SharedLocalizer.GetLocalizedHtmlString("here")</a> @SharedLocalizer.GetLocalizedHtmlString("to log in.")
</p>
