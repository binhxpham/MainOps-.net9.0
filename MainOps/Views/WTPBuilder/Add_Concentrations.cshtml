@model MainOps.Models.WTPClasses.ViewModels.VirtualConc

@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("Add Concentrations");
}

<h2>@SharedLocalizer.GetLocalizedHtmlString("Add Concentrations")</h2>
<h3>@SharedLocalizer.GetLocalizedHtmlString("Please be aware that only contaminants of high relative concentrations need to be entered here. If a regular concentration (i.e. nothing extreme, then just put 0. You can also fill everything out)")</h3>
@using (Html.BeginForm("InputUse", "WtpBuilder"))
{
    <table>
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(model => model.conts)</td>
                <td>@Html.DisplayNameFor(model => model.cont_conc)</td>
                <td>@Html.DisplayNameFor(model => model.conts)</td>
                <td>@Html.DisplayNameFor(model => model.cont_conc)</td>
            </tr>
        </thead>
        <tbody>
            @for (var i = 0; i < Model.conts.Count; i++)
            {
                <tr>
                    <td>@Html.DisplayFor(model => model.conts[i])</td>
                    <td>@Html.EditorFor(model => model.concentrations[i]) mg/l</td>
                    <td>@Html.DisplayFor(model => model.conts[i])</td>
                    <td>@Html.EditorFor(model => model.concentrations_out[i]) mg/l</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="form-group">
        <div class="col-sm-10 col-sm-offset-0">
            <button class="btn btn-primary " id="btnCreate" name="CreateButton" type="submit">
                @SharedLocalizer.GetLocalizedHtmlString("Create WTP")
            </button>
        </div>
    </div>
}


