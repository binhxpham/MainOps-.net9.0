@model IEnumerable<MainOps.Models.MonitorType>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<form asp-action="Create" method="get">
    <button class="btn-hoelscher" type="submit">@SharedLocalizer.GetLocalizedHtmlString("Create")</button>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @SharedLocalizer.GetLocalizedHtmlString("Monitor Point Type")
            </th>
            <th>
                @SharedLocalizer.GetLocalizedHtmlString("Division")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MonitorTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Division.Name)
            </td>
            <td>
                <form asp-action="Edit" asp-controller="MonitorTypes" asp-route-id="@item.Id" method="get"><button class="btn-hoelscher" type="submit">@SharedLocalizer.GetLocalizedHtmlString("Edit")</button></form>
                <form asp-action="Details" asp-controller="MonitorTypes" asp-route-id="@item.Id" method="get"><button class="btn-hoelscher" type="submit">@SharedLocalizer.GetLocalizedHtmlString("Details")</button></form>
                <form asp-action="Delete" asp-controller="MonitorTypes" asp-route-id="@item.Id" method="get"><button class="btn-hoelscher" type="submit">@SharedLocalizer.GetLocalizedHtmlString("Delete")</button></form>
            </td>
        </tr>
        }
    </tbody>
</table>
