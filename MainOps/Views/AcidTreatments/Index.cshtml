@model IEnumerable<MainOps.Models.AcidTreatment>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Wellname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Report_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DoneBy)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (item.SubProjectId != null)
                {
                    <text>
                    @Html.DisplayFor(modelItem => item.Project.Name) : @Html.DisplayFor(modelItem => item.SubProject.Name)
                    </text>
                }
                else
               {
                 @Html.DisplayFor(modelItem => item.Project.Name)
                }

            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Wellname)
            </td>
          
            <td>
                @Html.DisplayFor(modelItem => item.Report_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoneBy)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">@SharedLocalizer.GetLocalizedHtmlString("Edit")</a> |
                <a asp-action="AcidTreatmentReport" asp-route-id="@item.Id">@SharedLocalizer.GetLocalizedHtmlString("View")</a> |
                <form asp-action="UploadData" asp-controller="AcidTreatments" asp-route-id="@item.Id" method="get">
                    <button class="btn-hoelscher" >@SharedLocalizer.GetLocalizedHtmlString("Upload Data")</button>
                </form>
                @if (User.IsInRole("Admin") ||User.IsInRole("DivisionAdmin")) { 
                <form asp-action="Delete" asp-controller="AcidTreatments" asp-route-id="@item.Id" method="get">
                    <button class="btn-hoelscher" onclick="confirm='Are you sure you want to delete this item?'">@SharedLocalizer.GetLocalizedHtmlString("Delete")</button>
                </form>
                }
            </td>
        </tr>
}
    </tbody>
</table>
