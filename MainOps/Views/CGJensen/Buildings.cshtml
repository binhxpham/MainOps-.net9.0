@model IEnumerable<MainOps.Models.CGJClasses.Building>

@{
    ViewData["Title"] = "Bygninger";
}

<h2>Bygninger</h2>

<p>
    <a asp-action="Create_Building">Opret ny</a>
</p>
<p>
    <a asp-action="CGJensenMainMenu">Tilbage</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Protocol)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Protocol.Protocolnr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a asp-action="Edit_Building" asp-route-id="@item.Id">Rediger</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="CGJensenMainMenu">Tilbage</a>
</p>