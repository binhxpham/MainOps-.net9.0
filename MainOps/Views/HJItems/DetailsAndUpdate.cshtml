@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
<script type="text/javascript">
        var myLat = 0, myLng = 0, myAcc = 0;

        if (navigator.geolocation) {
            navigator.geolocation.watchPosition(function (position) {
                myLat = position.coords.latitude;
                myLng = position.coords.longitude;
                myAcc = position.coords.accuracy;

                //if (myAcc < 15.0) { // change to 10..
                getPos(myLat, myLng);
                //}
            },
                function (error) {
                    if (error.code == error.PERMISSION_DENIED) {
                                                alert("error geolocation off");
                    }

                }, { maximumAge: 2500, timeout: 50000, enableHighAccuracy: true });
        }
    function getPos(lat, lng) {
            $.ajax({
                    type: 'post',
                    url: '/HJItems/UpdateCoords',
                    data: {
                        'theid': @Model.Id,
                        'lati': lat,
                        'longi': lng
                    },
                success: function (response) {
                    if (response == "isuser") {
                        location.href = '@Url.Action("AddItemToProject", "HJItems")?Id=' + @Model.Id;
                    }
                    else {
                        location.href = '@Url.Action("Details","HJItems")?Id=' + @Model.Id;
                    }

                    },
                error: function () {
                        location.href = '@Url.Action("Details","HJItems")?Id=' + @Model.Id;
                    }
                })
        }
</script>
}
