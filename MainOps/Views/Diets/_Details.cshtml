            <td style="text-align:center;">@Html.DisplayFor(Model => Model.DeductionLunch)</td>
            <td style="text-align:center;">@SharedLocalizer.GetLocalizedHtmlString("days x")</td>
            <td style="text-align:center;">@SharedLocalizer.GetLocalizedHtmlString("kr. ") @String.Format("{0:n2}", @Model.DeductionLunchRate) =</td>
            @if (Model.DeductionLunchSubTotal != null)
            {
                <td style="text-align:center;">@String.Format("{0:n2} DKK", Model.DeductionLunchSubTotal)</td>
            }
            else
            {
                <td style="text-align:center;"></td>
            }
        </tr>
        <tr>
            <td><label asp-for="DeductionDinner"></label></td>
            <td style="text-align:center;">@Html.DisplayFor(Model => Model.DeductionDinner)</td>
            <td style="text-align:center;">@SharedLocalizer.GetLocalizedHtmlString("days x")</td>
            <td style="text-align:center;">@SharedLocalizer.GetLocalizedHtmlString("kr. ") @String.Format("{0:n2}", @Model.DeductionDinnerRate) =</td>
            @if (Model.DeductionDinnerSubTotal != null)
            {
                <td style="text-align:center;">@String.Format("{0:n2} DKK", Model.DeductionDinnerSubTotal)</td>
            }
            else
            {
                <td style="text-align:center;"></td>
            }
        </tr>
        <tr style="border-top: 1px dashed black; background-color: lightgrey;">
            <td colspan="4" style="text-align:left;"><b><label asp-for="Total"></label></b></td>
            <td style="text-align:center;">
                @String.Format("{0:n2} DKK", Model.Total)
            </td>
        </tr>
    </tbody>
</table>
<br />
<table style="width:45%;height:150px;float:left;margin-right:5%;">
    <tr>
        <td>
            <img src="data:image/jpg;base64, @Model.SignatureEmployee" style="width:100%;height:120px;">
        </td>
    </tr>
    <tr>
        <td style="width:30%;border-top:dashed;margin-right:3%">Underskrift Medarbejder</td>
    </tr>
</table>
