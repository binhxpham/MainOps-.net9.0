            }

        </tr>
        <tr>
            <td><label asp-for="HourAddon"></label></td>
            <td style="text-align:center;">@Html.DisplayFor(Model => Model.HourAddon)</td>
            <td style="text-align:center;">@SharedLocalizer.GetLocalizedHtmlString("hours x")</td>
            <td style="text-align:center;">@SharedLocalizer.GetLocalizedHtmlString("kr. ") @String.Format("{0:n2}", @Model.HourAddonRate) =</td>
            @if (Model.HourAddonSubTotal != null)
            {
                <td style="text-align:center;">@String.Format("{0:n2} DKK", Model.HourAddonSubTotal)</td>
            }
            else
            {
                <td style="text-align:center;"></td>
            }

        </tr>
        <tr>
            <td colspan="5">
                <b>@SharedLocalizer.GetLocalizedHtmlString("Deductions")</b>
            </td>
        </tr>
        <tr>
            <td><label asp-for="DeductionBreakFast"></label></td>
            <td style="text-align:center;">@Html.DisplayFor(Model => Model.DeductionBreakFast)</td>
            <td style="text-align:center;">@SharedLocalizer.GetLocalizedHtmlString("days x")</td>
