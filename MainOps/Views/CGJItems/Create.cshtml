@model MainOps.Models.CGJItem

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>CGJ Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PathTo3DDrawing" />
            <input type="hidden" asp-for="PathToPicture" />
            <input type="hidden" asp-for="latitude" />
            <input type="hidden" asp-for="longitude" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CGJItemClassId" class="control-label">@SharedLocalizer.GetLocalizedHtmlString(@Html.DisplayNameFor(Model => Model.CGJItemClassId))</label>
                @Html.DropDownListFor(Model =>Model.CGJItemClassId,ViewData["CGJItemClassId"] as IEnumerable<SelectListItem>,
                @SharedLocalizer.GetLocalizedHtmlString("Please Select Item Class"), new { name = "id", style = "width:250px;height:40px;" })
            </div>
            @* <div class="form-group">
                <label asp-for="weight" class="control-label"></label>
                <input asp-for="weight" class="form-control" />
                <span asp-validation-for="weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemLength" class="control-label"></label>
                <input asp-for="ItemLength" class="form-control" />
                <span asp-validation-for="ItemLength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemWidth" class="control-label"></label>
                <input asp-for="ItemWidth" class="form-control" />
                <span asp-validation-for="ItemWidth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemHeight" class="control-label"></label>
                <input asp-for="ItemHeight" class="form-control" />
                <span asp-validation-for="ItemHeight" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Department" class="control-label"></label>
                <input asp-for="Department" class="form-control" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContactPerson" class="control-label"></label>
                <input asp-for="ContactPerson" class="form-control" />
                <span asp-validation-for="ContactPerson" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ownership" class="control-label"></label>
                <input asp-for="Ownership" class="form-control" />
                <span asp-validation-for="Ownership" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GPS_Tracker" class="control-label"></label>
                <input asp-for="GPS_Tracker" class="form-control" />
                <span asp-validation-for="GPS_Tracker" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery-ui-timepicker-addon.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(function () {
                $(".date-picker").datepicker({
                    changeMonth: false,
                    changeYear: true,
                    yearRange: "-100:+0",
                    dateFormat: 'dd-M-yy',
                    controlType: 'select',
                });

            });
        });

    </script>
}
