                        </tr>
                        <tr>
                            <td rowspan="2" align="center" width="50%" style="border-width:thin;border-style:solid;height:0.7cm;">@Html.DisplayFor(Model => item.Name)</td>
                        </tr>
                    </table>
                </div>
            }
        </div>
    }
</body>
</html>
