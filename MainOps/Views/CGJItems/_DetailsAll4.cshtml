@model IEnumerable<MainOps.Models.CGJItem>

@{
    Layout = null;
    var items = Model.ToList();
    int total = items.Count;
    int itemsPerPage = 5;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>All QR-codes</title>
    <link rel="stylesheet" href="@Url.Content("~/css/pdfcss.css")" />
    <style>
        .page {
            page-break-after: always;
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
        }

        .item {
            width: 48%;
            margin-bottom: 20px;
            /* border: 1px solid #000; */
            padding: 10px;
            box-sizing: border-box;
        }

        table {
            width: 100%;
            font-size: 10pt;
        }

        img.qr {
            height: 120px;
        }

        .logo {
            height: 60px;
            max-width: 100%;
        }
    </style>
</head>
<body>
    @for (int i = 0; i < total; i += itemsPerPage)
    {
        <div class="page">
            @for (int j = 0; j < itemsPerPage && (i + j) < total; j++)
            {
                var item = items[i + j];
                <div class="item">
                    <table>
                       @*  <tr>
                            <td colspan="2" align="center">
                                <img src="~/images/Divisions/Photos/@item.DivisionId/@item.Division.LogoPath" class="logo" />
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2" align="center">@Html.DisplayFor(modelItem => item.Name)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(modelItem => item.CGJId)</td>
                            <td>@Html.DisplayFor(modelItem => item.CGJId)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(modelItem => item.Department)</td>
                            <td>@Html.DisplayFor(modelItem => item.Department)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayNameFor(modelItem => item.ContactPerson)</td>
                            <td>@Html.DisplayFor(modelItem => item.ContactPerson)</td>
                        </tr>
                        <tr>
                            <td colspan="2" align="center">
                                <img src='@Url.Action("GetQR","CGJItems",new { Id = item.Id })' class="qr" />
                            </td>
                        </tr> *@

                        <tr>
                            <td width="50%" align="left" style="height: 1.4cm;"><img src="~/images/Divisions/Photos/@item.DivisionId/@item.Division.LogoPath" style="width:90%;" /></td>
                            <td rowspan="2" width="50%" align="center" style="border-width:thin;border-style:solid;height:0.7cm;">@Html.DisplayFor(Model => item.CGJId)</td>
                        </tr>
