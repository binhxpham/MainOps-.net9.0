@model IEnumerable<MainOps.Models.CGJItem>

@{
    Layout = null;
}
<!DOCTYPE html>
<style>
    div#myDiv {
        -ms-transform: rotate(-90deg); /* IE 9 */
        -webkit-transform: rotate(-90deg); /* Safari prior 9.0 */
        transform: rotate(-90deg); /* Standard syntax */
        transform: translate(0,500);
        page-break-after: always;
    }
</style>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Items</title>
    <link rel="stylesheet" href="@Url.Content("~/css/pdfcss.css")" />
</head>
<body>
    <font size="4">
        @{ int counter = 0;
            //int divisionId = Convert.ToInt32(Model.First().Division.Id);//
            int divisionId = Model.FirstOrDefault()?.Division?.Id ?? 0;
            //string logopath = Model.First().Division.LogoPath;
            string logopath = Model.FirstOrDefault()?.Division?.LogoPath ?? "/images/default-logo.png";

        }
        @for (int i = 0; i < Model.Count() / 2; i++)
        {
            counter += 1;

            <table style="height: 4.3cm; width: 8cm; margin-bottom: 2cm; margin-right: 1cm; float: left; ">
                <tbody>
                    <tr>
                        <td width="50%" align="left" style="height: 1.4cm;"><img src="~/images/Divisions/Photos/@divisionId/@logopath" style="width:90%;" /></td>
                        <td rowspan="2" width="50%" align="center" style="border-width:thin;border-style:solid;height:0.7cm;">@Html.DisplayFor(Model => Model.ElementAt(i * 2).CGJId)</td>
                    </tr>
                    <tr>
                        <td rowspan="3" width="50%" align="left" style="height: 2.9cm;"><img src='@Url.Action("GetQR","CGJItems",new { Id = Model.ElementAt(i * 2).Id })' alt="" style="height:95%;"/></td>
                    </tr>
                    <tr>
                        <td rowspan="2" align="center" width="50%" style="border-width:thin;border-style:solid;height:0.7cm;">@Html.DisplayFor(Model => Model.ElementAt(i * 2).Name)</td>
                    </tr>
                </tbody>
            </table>
            <table style="height: 4.3cm; width: 8cm; margin-bottom: 2cm; margin-right: 1cm; float: right; ">
                <tbody>
                    <tr>
                        <td width="50%" align="left" style="height: 1.4cm;"><img src="~/images/Divisions/Photos/@divisionId/@logopath" style="width:90%;" /></td>
                        <td rowspan="2" width="50%" align="center" style="border-width:thin;border-style:solid;height:0.7cm;">@Html.DisplayFor(Model => Model.ElementAt(i * 2 + 1).CGJId)</td>
                    </tr>
                    <tr>
                        <td rowspan="3" width="50%" align="left" style="height: 2.9cm;"><img src='@Url.Action("GetQR","CGJItems",new { Id = Model.ElementAt(i * 2 + 1).Id })' alt="" style="height:95%;" /></td>
                    </tr>
                    <tr>
                        <td rowspan="2" align="center" width="50%" style="border-width:thin;border-style:solid;height:0.7cm;">@Html.DisplayFor(Model => Model.ElementAt(i * 2 + 1).Name)</td>
                    </tr>
                </tbody>
            </table>
            @if(counter % 5 == 0)
                {
                    <table style="border-style:hidden;page-break-after:always !important;"></table>
                }


        }
    </font>
    </body>
</html>