@model IEnumerable<MainOps.Models.WellCheck>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WellName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeStamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CanBeFound)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comments)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.IsCoverOk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsShaftOk)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WellHeads)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WellName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeStamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanBeFound)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumBerOfPipes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCoverOk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsShaftOk)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WellHeads)
            </td>
            <td>
                <form asp-action="Edit" asp-route-id="@item.Id" method="get">
                    <button class="btn-hoelscher">@SharedLocalizer.GetLocalizedHtmlString("Edit")</button>
                </form>
                <form asp-action="Details" asp-controller="WellChecks" asp-route-id="@item.Id" target="_blank">
                    <button class="btn-hoelscher">@SharedLocalizer.GetLocalizedHtmlString("View")</button>
                </form>
                @if (User.IsInRole("Admin") || User.IsInRole("DivisionAdmin")) { 
                <form asp-action="Delete" asp-controller="WellChecks" asp-route-id="@item.Id">
                    <button class="btn-hoelscher" onclick="confirm('Are you sure you want to delete this entry?')">@SharedLocalizer.GetLocalizedHtmlString("Delete")</button>
                </form>
                }
            </td>
        </tr>
}
    </tbody>
</table>
