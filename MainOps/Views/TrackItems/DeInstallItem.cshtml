@model MainOps.Models.DeInstallModel

@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("Deinstall Item");
}

<h2>@SharedLocalizer.GetLocalizedHtmlString("Deinstall item")</h2>
<form asp-controller="TrackItems" asp-action="DeInstallItem" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <table style="width:100%;table-layout:fixed;">
        <tr>
            <td>@Html.DisplayNameFor(Model => Model.id)</td>
            <td>@Html.DisplayFor(Model => Model.id)</td>
        </tr>
        <tr>
            <td>@SharedLocalizer.GetLocalizedHtmlString("Deinstall date?")</td>
            <td><input asp-for="TimeStamp" type="datetime-local"> <span asp-validation-for="TimeStamp" class="text-danger"></span></td>
        </tr>
        <tr>
            <td>@SharedLocalizer.GetLocalizedHtmlString("Deinstall amount:")</td>
            <td><input asp-for="Amount" type="number" min="0" step="0.01" /> <span asp-validation-for="Amount" class="text-danger"></span></td>
        </tr>
        <tr>
            <td>@SharedLocalizer.GetLocalizedHtmlString("Deinstallation text")</td>
            <td><textarea asp-for="LogText" cols="30" rows="4" style="width:100%;"></textarea></td>
        </tr>
        <tr>
            <td>@SharedLocalizer.GetLocalizedHtmlString("Upload photos")</td>
            <td><input name="files" type="file" multiple accept=".png,.jpg,.jpeg,.pdf" /></td>
        </tr>
        <tr><td colspan="2"><button class="btn-hoelscher" style="width:100%;height:36px;">@SharedLocalizer.GetLocalizedHtmlString("Deinstall!")</button></td></tr>
    </table>
</form>
