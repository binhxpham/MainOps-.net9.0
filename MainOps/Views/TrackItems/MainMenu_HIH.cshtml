
@{
    ViewData["Title"] = "Main Menu";
}
@inject UserManager<ApplicationUser> _userManager;
<h2>@SharedLocalizer.GetLocalizedHtmlString("Main Menu")</h2>

<div class="row">
    <div class="col-xs-12">
        <table style="width:100%;table-layout:fixed;font-size:18px;">
            @if (User.IsInRole("Admin") || User.IsInRole("International"))
            {
                <tr>
                    <td style="width:100%;">
                        <form asp-action="Mobilize" asp-controller="TrackItems" method="get">
                            <button class="btn-hoelscher" style="width:100%;height:100px;">@SharedLocalizer.GetLocalizedHtmlString("Mobilize")</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="Arrival" asp-controller="TrackItems" method="get">
                            <button class="btn-hoelscher" style="width:100%;height:100px;">@SharedLocalizer.GetLocalizedHtmlString("Add To Stock")</button>
                        </form>
                    </td>

                </tr>
                <tr>
                    <td>
                        <form asp-action="Arrivals_HIH" asp-controller="TrackItems" method="get">
                            <button class="btn-hoelscher" style="width:100%;height:100px;">@SharedLocalizer.GetLocalizedHtmlString("Stock Overview")</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="Index" asp-controller="ItemTypes" method="get">
                            <button class="btn-hoelscher" style="width:100%;height:100px;">@SharedLocalizer.GetLocalizedHtmlString("Item List and Prices")</button>
                        </form>
                    </td>
                </tr>

                <tr>
                    <td>
                        <form asp-action="GenerateInvoice" asp-controller="TrackItems" method="get">
                            <button class="btn-hoelscher" style="width:100%;height:100px;">@SharedLocalizer.GetLocalizedHtmlString("Generate Invoice")</button>
                        </form>
                    </td>
                    <td>
                        <form asp-action="Index" asp-controller="Payments" method="get">
                            <button class="btn-hoelscher" style="width:100%;height:100px;">@SharedLocalizer.GetLocalizedHtmlString("Payments")</button>
                        </form>
                    </td>
                </tr>

            }
        </table>
    </div>
</div>


