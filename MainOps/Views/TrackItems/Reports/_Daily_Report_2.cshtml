@model MainOps.Models.ReportClasses.Daily_Report_2
@{
    Layout = null;
}
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@SharedLocalizer.GetLocalizedHtmlString("Daily Report")</title>
    <link rel="stylesheet" href="@Url.Content("~/css/pdfcss.css")" />
</head>



<table style="page-break-inside:avoid;">
    <tr>
        <td colspan="3">
            <b>@SharedLocalizer.GetLocalizedHtmlString("Daily Report")</b>
        </td>
    </tr>
    <tr>
        <td style="text-align:left;">
            <b>
                @Html.DisplayNameFor(Model => Model.Project.Name)
            </b>
        </td>
        <td>
            @Html.DisplayFor(Model => Model.Project.Name)
        </td>
        <td rowspan="4" align="right"><img src="~/images/Divisions/Photos/@Model.Project.Division.Id/@Model.Project.Division.LogoPath" width="151" height="66" /></td>
    </tr>
    <tr>
        <td style="text-align:left;">
            <b>
                @Html.DisplayNameFor(Model => Model.Project.ProjectNr)
            </b>
        </td>
        <td>
            @Html.DisplayFor(Model => Model.Project.ProjectNr)
        </td>
    </tr>
    @if (Model.SubProjectId != null)
    {
        <tr>
            <td style="text-align:left;">
                <b>
                    @Html.DisplayNameFor(Model => Model.SubProject.Name)
                </b>
            </td>
            <td>
                @Html.DisplayFor(Model => Model.SubProject.Name) : @Html.DisplayFor(Model => Model.SubProject.SubProjectNr)
            </td>
        </tr>
    }
    <tr>
        <td style="text-align:left;">
            <b>
                @Html.DisplayNameFor(Model => Model.Project.Client)
            </b>
        </td>
        <td>
            @Html.DisplayFor(Model => Model.Project.Client)
        </td>

    </tr>
    <tr>
        <td style="text-align:left;">
            <b>
                @Html.DisplayNameFor(Model => Model.short_Description)
            </b>
        </td>
        <td>
            @Html.DisplayFor(Model => Model.short_Description)
        </td>
    </tr>

    <tr>
        <td style="text-align:left;">
            <b>
                @Html.DisplayNameFor(Model => Model.Report_Date)
            </b>
        </td>
        <td>
            @Html.DisplayFor(Model => Model.Report_Date)
        </td>
    </tr>
    <tr>
        <td style="text-align:left;">
            <b>
                @Html.DisplayNameFor(Model => Model.Amount)
            </b>
        </td>
        <td>
            @Html.DisplayFor(Model => Model.Amount)
        </td>
    </tr>
    <tr>
        <td style="text-align:left;">
            <b>
                @Html.DisplayNameFor(Model => Model.StartHour)
            </b>
        </td>
        <td>
            @Html.DisplayFor(Model => Model.StartHour)
        </td>
    </tr>
    <tr>
        <td style="text-align:left;">
            <b>
                @Html.DisplayNameFor(Model => Model.EndHour)
            </b>
        </td>
        <td>
            @Html.DisplayFor(Model => Model.EndHour)
        </td>
    </tr>
    @if(Model.StandingTime != TimeSpan.Zero)
            {
                <tr>
                    <td style="text-align:left;">
                        <b>
                            @Html.DisplayNameFor(Model => Model.StandingTime)
                        </b>
                    </td>
                    <td>
                        @Html.DisplayFor(Model => Model.StandingTime)
                    </td>
                </tr>
                <tr>
                    <td style="text-align:left;">
                        <b>
                            @Html.DisplayNameFor(Model => Model.Machinery)
                        </b>
                    </td>
                    <td>
                        @Html.DisplayFor(Model => Model.Machinery)
                    </td>
                </tr>
            }


    @try { 
        <tr>
            <td style="text-align:left;">
                <b>
                    @Html.DisplayNameFor(Model => Model.Title.TheTitle)
                </b>
            </td>
            <td>
                @Html.DisplayFor(Model => Model.Title.TheTitle)
            </td>
        </tr>
    }
            catch
            {

            }
    <tr>
        <td style="text-align:left;">
            <b>
                @Html.DisplayNameFor(Model => Model.DoneBy)
            </b>
        </td>
        <td>
            @Html.DisplayFor(Model => Model.DoneBy)
        </td>
    </tr>
    <tr>
        <td colspan="3"><b>@Html.DisplayNameFor(Model => Model.Work_Performed)</b></td>
    </tr>
    <tr rowspan="20">
        <td colspan="3" style="text-align:left;">
            @if(Model.Work_Performed != null && Model.Work_Performed != "") { 
                @Html.Raw(Model.Work_Performed.Replace("\r\n", "<br />"))
            }
            else
            {
                @Html.DisplayFor(Model => Model.Work_Performed)
            }
        </td>
    </tr>
</table>

<table name="phototable" style="page-break-inside:avoid;width:100%;table-layout:fixed;">
    @{ var rows = 0;}
    @if (Model.pictures.Count % 3 == 0)
    {
        rows = Model.pictures.Count() / 3;
    }
    else
    {
        rows = Convert.ToInt32(Model.pictures.Count() / 3) + 1;
    }
    @{ var totalpics = Model.pictures.Count();}
    @for (int i = 0; i < rows; i++)
    {
        @if (totalpics - 3 >= 0) //enough room to add whole row
        {
            <tr>
                <td style="width:100%;"><img src="~/AHAK/DailyReports/@Model.Id.ToString()/@Model.pictures[(i+1)*3 - 3]" style="width:100%;" /></td>
                <td style="width:100%;"><img src="~/AHAK/DailyReports/@Model.Id.ToString()/@Model.pictures[(i+1)*3 - 3 +1]" style="width:100%;" /></td>
                <td style="width:100%;"><img src="~/AHAK/DailyReports/@Model.Id.ToString()/@Model.pictures[(i+1)*3 - 3 +2]" style="width:100%;" /></td>
            </tr>
            totalpics -= 3;
        }
        else if (totalpics - 2 >= 0)
        {
            <tr>
                <td style="width:100%;"><img src="~/AHAK/DailyReports/@Model.Id.ToString()/@Model.pictures[(i+1)*3 - 3]" style="width:100%;" /></td>
                <td style="width:100%;"><img src="~/AHAK/DailyReports/@Model.Id.ToString()/@Model.pictures[(i+1)*3 - 3 +1]" style="width:100%;" /></td>
                <td style="width:100%;"></td>
            </tr>
            totalpics -= 2;
        }
        else //enough room to add 1 picture in row
        {
            <tr>
                <td style="width:100%;"><img src="~/AHAK/DailyReports/@Model.Id.ToString()/@Model.pictures[(i+1)*3 - 3]" style="width:100%;" /></td>
                <td style="width:100%;"></td>
                <td style="width:100%;"></td>
            </tr>
            totalpics -= 1;
        }

    }
</table>