                    }
                    else {
                        var s = '<option value="">Please Select SubProject</option>';
                        $("#dailySubProjectId").html(s);
                    }
                }
            });
        }
        function unpaidchange() {
            if (document.getElementById('unpaid').checked) {
                document.getElementById('unpaid').value = true;
            } else {
                document.getElementById('unpaid').value = false;
            }
        }
        function paidchange() {
            if (document.getElementById('paid').checked) {
                document.getElementById('paid').value = true;
            } else {
                document.getElementById('paid').value = false;
            }
        }
</script>
