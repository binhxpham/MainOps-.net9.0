@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
    var lang = $("#requestCulture_RequestCulture_UICulture_Name").val();
        function ShowWellPoints() {
            $(".hiddenwpline").toggle();
        }
        function FillItems() {
            var ProjectId = $('#ProjectId2').val();
            var url = '@Url.Action("GetItemsProject", "ItemTypes")';
            $.ajax({
                type: 'GET',
                url: url,
                dataType: 'json',
                data: {
                    'theId': ProjectId,
                    'type' : "installedit"
                },
                success: function (data) {
                    var s = '<option value="">Please Select</option>';
                    if (lang == "de-DE") {
                        s = '<option value="">Bitte auswählen</option>';
                    }
                    for (var prop in data) {
                        s += '<option value="' + data[prop]["id"] + '">' + data[prop]["item_Type"] + '</option>';
                    }
                    $("#ItemTypeId").html(s);
                    document.getElementById("ItemTypeId").style.width = "100%";
                },
                error: function () {
                    alert("error");
                }
            });
    }
    function GetBillableActivities(index) {
            var url = '@Url.Action("BilledActivities", "Installs")';
            $.ajax({
            type: 'GET',
            url: url,
            data: { "id" : index },
            contentType: 'application/html;charset=utf-8',
            dataType: 'html',
            success: function (data) {
                var thepartial = $("#billableContent").html(data);
                OpenBillableModal();
            }
          });
        }
        $(document).ready(function () {
            FillItems();
        })
    </script>
}