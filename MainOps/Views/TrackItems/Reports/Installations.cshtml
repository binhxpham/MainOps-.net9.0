            </th>
            <th>
                @SharedLocalizer.GetLocalizedHtmlString("Text")
            </th>
            <th>
                @SharedLocalizer.GetLocalizedHtmlString("Installed")
            </th>
            <th>
                @SharedLocalizer.GetLocalizedHtmlString("DeInstalled")
            </th>
            <th>
