@model MainOps.Models.Grouting

@{
    ViewData["Title"] = "Edit_Grouting";
}

<h2>Edit Grouting</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit_Grouting" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Exclude_From_Invoice" class="control-label"></label>
                <input asp-for="Exclude_From_Invoice" class="form-control" />
                <span asp-validation-for="Exclude_From_Invoice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReportChecked" class="control-label"></label>
                <input asp-for="ReportChecked" class="form-control" />
                <span asp-validation-for="ReportChecked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectId" class="control-label"></label>
                <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId" onchange="FillSubProjects();"></select>
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubProjectId" class="control-label"></label>
                <select asp-for="SubProjectId" asp-items="ViewBag.SubProjectId" class="form-control">
                    <option value="">@SharedLocalizer.GetLocalizedHtmlString("Please Select SubProject")</option>
                </select>
                <span asp-validation-for="SubProjectId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input asp-for="EndTime" class="form-control" />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Latitude" class="control-label"></label>
                <input asp-for="Latitude" class="form-control" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Longitude" class="control-label"></label>
                <input asp-for="Longitude" class="form-control" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Location" class="control-label"></label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Totalm3_override" class="control-label"></label>
                <input asp-for="Totalm3_override" class="form-control" />
                <span asp-validation-for="Totalm3_override" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WaterMeterStart" class="control-label"></label>
                <input asp-for="WaterMeterStart" class="form-control" />
                <span asp-validation-for="WaterMeterStart" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WM_Before_Photos" class="control-label"></label>
                <input name="photo4" type="file" accept=".jpg,.jpeg" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="WaterMeterEnd" class="control-label"></label>
                <input asp-for="WaterMeterEnd" class="form-control" />
                <span asp-validation-for="WaterMeterEnd" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WM_After_Photos" class="control-label"></label>
                <input name="photo5" type="file" accept=".jpg,.jpeg" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DoneBy" class="control-label"></label>
                <input asp-for="DoneBy" class="form-control" />
                <span asp-validation-for="DoneBy" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comments" class="control-label"></label>
                <input asp-for="Comments" class="form-control" />
                <span asp-validation-for="Comments" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Before_Photos" class="control-label"></label>
                <input name="photo1" type="file" accept=".jpg,.jpeg" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Grout_Photos" class="control-label"></label>
                <input name="photo2" type="file" accept=".jpg,.jpeg" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="After_Photos" class="control-label"></label>
                <input name="photo3" type="file" accept=".jpg,.jpeg" class="form-control" />
            </div>
            <div class="form-group">
                <button class="btn-hoelscher">@SharedLocalizer.GetLocalizedHtmlString("Save")</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MainMenu">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery-ui-timepicker-addon.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $(function () {
                $(".date-picker").datepicker({
                    changeMonth: true,
                    changeYear: true,
                    yearRange: "-2:+0",
                    dateFormat: "yy-MM-dd",
                    timeFormat: "HH:mm",
                    controlType: 'select',
                    showSecond: false,
                    showMillisec: false,
                    showMicrosec: false,
                    showTimezone: false
                });
            });
        });
        function FillSubProjects() {
            var SubProjectId = $('#SubProjectId').val();
            var ProjectId = $('#ProjectId').val();
            var url = '@Url.Action("GetSubProjectList", "SubProjects")';
            $.ajax({
                type: 'GET',
                url: url,
                dataType: 'json',
                data: { 'theId': ProjectId },
                success: function (data) {
                    if (data.length > 0) {
                        var s = '<option value="">Please Select SubProject</option>';
                        for (var prop in data) {
                            s += '<option value="' + data[prop]["id"] + '">' + data[prop]["name"] + '</option>';
                        }
                        $("#SubProjectId").html(s);
                        document.getElementById("SubProjectId").style.width = "100%";
                        var x = document.getElementById("SubProjectId");
                        var i;
                        for (i = 0; i < x.length; i++) {
                            if (x.options[i].value == SubProjectId) {
                                x.options[i].selected = true;
                            }
                        }
                    }
                    else {
                        var s = '<option value="">Please Select SubProject</option>';
                        $("#SubProjectId").html(s);
                    }
                }
            });
        }
        
        
    </script>
}

