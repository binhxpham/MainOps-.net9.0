@model MainOps.Models.SiteCheck
@{
    ViewData["Title"] = "SiteCheck";
}
<div class="row">
    <div class="col-xs-12">
        <form asp-action="SiteCheck" asp-controller="TrackItems" method="post" onsubmit="retrieveData(event);" enctype="multipart/form-data">
