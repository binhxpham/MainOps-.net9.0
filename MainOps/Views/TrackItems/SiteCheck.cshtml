                            <option value="N/A">@SharedLocalizer.GetLocalizedHtmlString("N/A")</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="Valves_Comment" class="control-label"></label></td>
                    <td><input asp-for="Valves_Comment" placeholder="@SharedLocalizer.GetLocalizedHtmlString("Comment:")" class="form-control" style="width:100%;" /></td>
                </tr>
                <tr>
                    <td><label asp-for="WellDamages" class="control-label"></label></td>
                    <td>
                        <select asp-for="WellDamages" class="form-control" style="width:100%;">
                            <option value="No">@SharedLocalizer.GetLocalizedHtmlString("No")</option>
