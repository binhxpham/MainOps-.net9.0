                            <option value="Yes">@SharedLocalizer.GetLocalizedHtmlString("Yes")</option>
                            <option value="N/A">@SharedLocalizer.GetLocalizedHtmlString("N/A")</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="CheckAllLevels_Comment" class="control-label"></label></td>
                    <td><input asp-for="CheckAllLevels_Comment" placeholder="@SharedLocalizer.GetLocalizedHtmlString("Comment:")" class="form-control" style="width:100%;" /></td>
                </tr>
                <tr>
                    <td><label asp-for="SCADA_PUMPS_RUNNING" class="control-label"></label></td>
                    <td>
                        <select asp-for="SCADA_PUMPS_RUNNING" class="form-control" style="width:100%;">
                            <option value="No">@SharedLocalizer.GetLocalizedHtmlString("No")</option>
                            <option value="Yes">@SharedLocalizer.GetLocalizedHtmlString("Yes")</option>
                            <option value="N/A">@SharedLocalizer.GetLocalizedHtmlString("N/A")</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="SCADA_PUMPS_RUNNING_Comment" class="control-label"></label></td>
                    <td><input asp-for="SCADA_PUMPS_RUNNING_Comment" placeholder="@SharedLocalizer.GetLocalizedHtmlString("Comment:")" class="form-control" style="width:100%;" /></td>
                </tr>
                <tr>
                    <td><label asp-for="Leakages" class="control-label"></label></td>
                    <td>
                        <select asp-for="Leakages" class="form-control" style="width:100%;">
                            <option value="No">@SharedLocalizer.GetLocalizedHtmlString("No")</option>
                            <option value="Yes">@SharedLocalizer.GetLocalizedHtmlString("Yes")</option>
                            <option value="N/A">@SharedLocalizer.GetLocalizedHtmlString("N/A")</option>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td><label asp-for="Leakages_Comment" class="control-label"></label></td>
                    <td><input asp-for="Leakages_Comment" placeholder="@SharedLocalizer.GetLocalizedHtmlString("Comment:")" class="form-control" style="width:100%;" /></td>
