@model MainOps.Models.Grouting
    <link href="~/css/jquery-ui-timepicker-addon.min.css" rel="stylesheet" />
@{
    ViewData["Title"] = "Grouting";
}

<h2>Grouting</h2>

<hr />
<form id="theform" asp-action="Grouting" asp-controller="TrackItems" autocomplete="off" method="post" enctype="multipart/form-data" onsubmit="retrieveData(event);">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input asp-for="Exclude_From_Invoice" value="false" hidden="hidden" />
    <input asp-for="ReportChecked" value="false" hidden="hidden" />
    <table style="width:100%;table-layout:fixed;">
        <tr>
            <td>
                <label asp-for="ProjectId" class="control-label"></label>
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </td>
            <td>
                <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId" onchange="FillSubProjects();" style="width:100%;">
                    <option value="">@SharedLocalizer.GetLocalizedHtmlString("Please Select Project")</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="SubProjectId" class="control-label"></label>
                <span asp-validation-for="SubProjectId" class="text-danger"></span>
            </td>
            <td>
                <select asp-for="SubProjectId" class="form-control" style="width:100%;">
                    <option value="">@SharedLocalizer.GetLocalizedHtmlString("Select SubProject")</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <label asp-for="StartTime" class="control-label"></label>
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </td>
            <td><input type="datetime" asp-for="StartTime" class="date-picker" style="width:100%;" /><span asp-validation-for="StartTime" class="text-danger"></span></td>
        </tr>
        <tr>
            <td>
                <label asp-for="EndTime" class="control-label"></label>
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </td>
            <td><input type="datetime" asp-for="EndTime" class="date-picker" style="width:100%;" /><span asp-validation-for="EndTime" class="text-danger"></span></td>
        </tr>
        <tr>
            <td>
                <label asp-for="WaterMeterStart"></label>
                <span asp-validation-for="WaterMeterStart" class="text-danger"></span>
            </td>
            <td><input asp-for="WaterMeterStart" value="0" type="number" step="0.001" min="0" style="width:100%;" /></td>
        </tr>
        <tr>
            <td><label asp-for="WM_Before_Photos"></label></td>
            <td><input id="photo4" name="photo4" type="file" accept=".jpg,.jpeg" style="width:100%;" /></td>
        </tr>
        <tr>
            <td>
                <label asp-for="WaterMeterEnd"></label>
                <span asp-validation-for="WaterMeterEnd" class="text-danger"></span>
            </td>
            <td><input asp-for="WaterMeterEnd" value="0" type="number" step="0.001" min="0" style="width:100%;" /></td>
        </tr>
        <tr>
            <td><label asp-for="WM_After_Photos"></label></td>
            <td><input id="photo5" name="photo5" type="file" accept=".jpg,.jpeg" style="width:100%;" /></td>
        </tr>
        <tr>
            <td><label asp-for="Before_Photos"></label></td>
            <td><input id="photo1" name="photo1" type="file" accept=".jpg,.jpeg" style="width:100%;" /></td>
        </tr>
        <tr>
            <td><label asp-for="Grout_Photos"></label></td>
            <td><input id="photo2" name="photo2" type="file" accept=".jpg,.jpeg" style="width:100%;" /></td>
        </tr>
        <tr>
            <td><label asp-for="After_Photos"></label></td>
            <td><input id="photo3" name="photo3" type="file" accept=".jpg,.jpeg" style="width:100%;" /></td>
        </tr>
        <tr>
            <td colspan="2"><label asp-for="Comments"></label></td>
        </tr>
        <tr>
            <td colspan="2"><textarea asp-for="Comments" cols="40" rows="4" style="width:100%;"></textarea></td>
        </tr>
        <tr>
            <td colspan="2">
                <button class="btn-hoelscher" style="width:100%;height:60px;">@SharedLocalizer.GetLocalizedHtmlString("Submit")</button>
            </td>
        </tr>
    </table>
    <br />
    <br />
    <input id="latinput" asp-for="Latitude" hidden="hidden" />
    <input id="longinput" asp-for="Longitude" hidden="hidden" />
    <input id="accuracy" value="1000" type="number" hidden="hidden" />

</form>


<div>
    <a asp-action="MainMenu">@SharedLocalizer.GetLocalizedHtmlString("Back")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery-ui-timepicker-addon.min.js"></script>
    <script type="text/javascript">
        var myLat = 0, myLng = 0, myAcc = 0;
        var id;
        if (navigator.geolocation) {
           id = navigator.geolocation.watchPosition(function (position) {
               myLat = position.coords.latitude;
               myLng = position.coords.longitude;
               myAcc = position.coords.accuracy;
               getPos(myLat, myLng,myAcc);
            },
                function (error) {
                    if (error.code == error.PERMISSION_DENIED) {
                                                alert("Enable Location Services! We cannot find your coordinates");
                    }

                }, { maximumAge: 0, timeout: 8000, enableHighAccuracy: true });
        }
        $(document).ready(function () {
            $(function () {
                $(".date-picker").datetimepicker({
                    changeMonth: true,
                    changeYear: true,
                    yearRange: "-2:+0",
                    dateFormat: "yy-MM-dd",
                    timeFormat: "HH:mm",
                    controlType: 'select',
                    showSecond: false,
                    showMillisec: false,
                    showMicrosec: false,
                    showTimezone: true,
                    firstDay: 1
                    

                });
            });
        });
        function getPos(lat, lng, acc) {
            if (+$("#accuracy").val() >= acc)
            {
                $("#accuracy").val(acc);
                $("#latinput").val(lat);
                $("#longinput").val(lng);
            }
        }
        function retrieveData(e) {
            var posting = true;
            var meterbefore = +$("#WaterMeterStart").val();
            var meterafter = +$("#WaterMeterEnd").val();
            var projectnr = $("#ProjectId").val();
            if (projectnr == "" || projectnr == -1) {
                posting = false;
                e.preventDefault();
                alert("choose project!");
            }
            if (!(meterbefore < meterafter && meterafter > 0)) {
                posting = false;
                e.preventDefault();
                alert("Water meter readings are not correct. Endvalue must be > 0 and start value must be less than end value")
            }
            if ($("#theform").valid() == false) {
                
                posting = false;
                e.preventDefault();
                alert("something is wrong");
            }
            if (posting == true) {
                StartSpinner();
            }
        }


        function FillSubProjects() {
            var ProjectId = $('#ProjectId').val();
            var url = '@Url.Action("GetSubProjectList", "SubProjects")';
            $.ajax({
                type: 'GET',
                url: url,
                dataType: 'json',
                data: { 'theId': ProjectId },
                success: function (data) {
                    if (data.length > 0) {
                        var s = '<option value="">Please Select SubProject</option>';
                        for (var prop in data) {
                            s += '<option value="' + data[prop]["id"] + '">' + data[prop]["name"] + '</option>';
                        }
                        $("#SubProjectId").html(s);
                        document.getElementById("SubProjectId").style.width = "100%";
                    }
                    else {
                        var s = '<option value="">Please Select SubProject</option>';
                        $("#SubProjectId").html(s);
                    }
                }
            });
        }
    </script>
}