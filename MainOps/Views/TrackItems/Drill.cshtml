@model MainOps.Models.Drill

@{
    ViewData["Title"] = "Drill";
}

<h2>@SharedLocalizer.GetLocalizedHtmlString("Drill Well")</h2>

<hr />
<form asp-action="Drill" asp-controller="TrackItems" method="post" enctype="multipart/form-data" onsubmit="retrieveData(event);">
    <input asp-for="Location" value="" hidden="hidden" />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <table style="width:100%;table-layout:fixed;">
        <tr>
            <td><label asp-for="Project">@SharedLocalizer.GetLocalizedHtmlString(@Html.DisplayNameFor(Model => Model.Project))</label></td>
            <td><select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId" onchange="FillSubProjects();" style="width:100%;"></select></td>
        </tr>
        <tr>
            <td><b>@Html.DisplayNameFor(x => x.SubProjectId)</b></td>
            <td>
                <select asp-for="SubProjectId" id="SubProjectId" style="width:100%;height:40px;">
                    <option value="">@SharedLocalizer.GetLocalizedHtmlString("Please Select SubProject")</option>
                </select>
            </td>
        </tr>
        <tr>
            <td><label asp-for="TimeStamp" class="control-label">@SharedLocalizer.GetLocalizedHtmlString(@Html.DisplayNameFor(Model => Model.TimeStamp))</label></td>
            <td>
                <input type="datetime" class="date-picker" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm")" asp-for="TimeStamp" id="thetime" style="width:100%;height:36px;" />
                <span asp-validation-for="TimeStamp" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="WellID" class="control-label"></label></td>
            <td>
                <input asp-for="WellID" class="form-control" style="width:100%" />
                <span asp-validation-for="WellID" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td> <label asp-for="DrillDepth" class="control-label"></label></td>
            <td>
                <input asp-for="DrillDepth" type="number" min="0.00" max="100.0" step="0.01" class="form-control" style="width:100%" onchange="CalculateBlindPipe();" />
                <span asp-validation-for="DrillDepth" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td> <label asp-for="PipeHeight" class="control-label"></label></td>
            <td>
                <input asp-for="PipeHeight" type="number" min="0.00" max="100.0" step="0.01" class="form-control" style="width:100%" onchange="CalculateBlindPipe();" />
                <span asp-validation-for="PipeHeight" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="PipeDiameter" class="control-label"></label></td>
            <td>
                <select asp-for="PipeDiameter" style="width:100%;height:36px;">
                    <option value="25mm" selected="selected">25mm</option>
                    <option value="50mm">50mm</option>
                </select>
                <span asp-validation-for="PipeDiameter" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="FilterStart" class="control-label"></label></td>
            <td>
                <input asp-for="FilterStart" type="number" value="0" min="0" max="100" step="0.01" class="form-control" style="width:100%" onchange="CalculateBlindPipe();" />
                <span asp-validation-for="FilterStart" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="FilterEnd" class="control-label"></label></td>
            <td>
                <input asp-for="FilterEnd" type="number" value="0" min="0" max="100" step="0.01" class="form-control" style="width:100%" onchange="CalculateBlindPipe();" />
                <span asp-validation-for="FilterEnd" class="text-danger"></span>
                <input asp-for="FilterLength" hidden="hidden" />
            </td>
        </tr>
        <tr>
            <td><label asp-for="BlindPipeDepth" class="control-label"></label></td>
            <td>
                <input asp-for="BlindPipeDepth" type="number" value="0" min="0" max="100" step="0.01" class="form-control" style="width:100%" />
                <span asp-validation-for="BlindPipeDepth" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="SandBagsUsed" class="control-label"></label></td>
            <td>
                <input asp-for="SandBagsUsed" type="number" value="0" min="0" max="100" step="0.5" class="form-control" style="width:100%" />
                <span asp-validation-for="SandBagsUsed" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td><label asp-for="MikrolitBagsUsed" class="control-label"></label></td>
            <td>
                <input asp-for="MikrolitBagsUsed" type="number" value="0" min="0" max="100" step="0.5" class="form-control" style="width:100%" />
                <span asp-validation-for="MikrolitBagsUsed" class="text-danger"></span>
            </td>
        </tr>
        <tr>
            <td><label class="control-label" style="width:100%">@SharedLocalizer.GetLocalizedHtmlString("Current Accuracy")</label></td>
            <td> <input type="number" value="1000" name="accuracy" id="accuracy" style="width:100%" /></td>
        </tr>
        <tr>
            <td colspan="2"><label asp-for="Comments" class="control-label" style="width:100%;"></label></td>
        </tr>
        <tr>
            <td colspan="2"><textarea asp-for="Comments" rows="6" cols="50" style="width:100%;"></textarea></td>
        </tr>
        <tr>
            <td><label>@SharedLocalizer.GetLocalizedHtmlString("Upload Photos")</label></td>
            <td><input name="files" type="file" multiple accept=".jpg,.jpeg,.png,.pdf" style="width:100%;" /></td>
        </tr>
        <tr>
            <td colspan="2"><button class="btn-hoelscher" style="width:100%;height:50px;">@SharedLocalizer.GetLocalizedHtmlString("Submit")</button></td>
        </tr>
    </table>
    <input type="number" id="latinput" value="0" name="Latitude" hidden="hidden" />
    <input type="number" id="longinput" value="0" name="Longitude" hidden="hidden" />
</form>


<div>
    <a asp-action="MainMenu">@SharedLocalizer.GetLocalizedHtmlString("Back to List")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery-ui-timepicker-addon.min.js"></script>
    <script type="text/javascript">
        var myLat = 0, myLng = 0, myAcc = 0;
        var id;
        var lang = $("#requestCulture_RequestCulture_UICulture_Name").val();
        if (navigator.geolocation) {
           id = navigator.geolocation.watchPosition(function (position) {
               myLat = position.coords.latitude;
               myLng = position.coords.longitude;
               myAcc = position.coords.accuracy;
               getPos(myLat, myLng,myAcc);
            },
                function (error) {
                    if (error.code == error.PERMISSION_DENIED) {
                                                //alert("error");
                    }

                }, { maximumAge: 3000, timeout: 8000, enableHighAccuracy: true });
        }
        function getPos(lat, lng, acc) {
            var currentacc = +$("#accuracy").val();
            if (acc < currentacc) {
                $("#accuracy").val(acc);
                $("#latinput").val(lat);
                $("#longinput").val(lng);
            }

        }
        function retrieveData(e) {
            var posting = true;
            var project = document.getElementById("ProjectId").value;            
            if (project == "" || project == -1) {
                posting = false;
                e.preventDefault();
                alert("Please pick a project");
            }
            if (posting == true) {
                StartSpinner();
            }
        }
        function CalculateBlindPipe() {
            var depth = +$("#DrillDepth").val();
            var filterstart = +$("#FilterStart").val();
            var filterend = +$("#FilterEnd").val();
            var pipeabove = +$("#PipeHeight").val();
            if (filterstart == 0 || filterend == 0) {

            }
            else {
                $("#FilterLength").val(filterend - filterstart);
                if (depth == 0) {

                }
                else {
                    $("#BlindPipeDepth").val(depth - (filterend - filterstart) + pipeabove);
                }
            }
        }
       
        function FillSubProjects() {
            var ProjectId = $('#ProjectId').val();
            var url = '@Url.Action("GetSubProjectList", "SubProjects")';
            $.ajax({
                type: 'GET',
                url: url,
                dataType: 'json',
                data: { 'theId': ProjectId },
                success: function (data) {
                    if (data.length > 0) {
                        var s = '<option value="">Please Select SubProject</option>';

                        if (lang == "de-DE") {
                            s = '<option value="">Bitte auswählen Unterprojekt</option>';
                        }
                        for (var prop in data) {
                            s += '<option value="' + data[prop]["id"] + '">' + data[prop]["name"] + '</option>';
                        }
                        $("#SubProjectId").html(s);
                        document.getElementById("SubProjectId").style.width = "100%";
                    }
                    else {
                        var s = '<option value="">Please Select SubProject</option>';
                        if (lang == "de-DE") {
                            s = '<option value="">Bitte auswählen Unterprojekt</option>';
                        }
                        $("#SubProjectId").html(s);
                    }
                }
            });
        }
        
        $(document).ready(function () {

            $(function () {
                $(".date-picker").datetimepicker({
                    changeMonth: true,
                    changeYear: true,
                    yearRange: "-100:+0",
                    dateFormat: "dd-MM-yy",
                    timeFormat: "HH:mm",
                    controlType: 'select',
                    firstDay: 1

                });
                $('.date-picker').datetimepicker("setDate", new Date());
            });
        });

    </script>
}


