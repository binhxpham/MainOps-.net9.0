@model MainOps.Models.Offset
<link href="~/css/jquery-ui-timepicker-addon.min.css" rel="stylesheet" />
<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="offset" class="control-label">@SharedLocalizer.GetLocalizedHtmlString(@Html.DisplayNameFor(Model => Model.offset))</label>
                <input asp-for="offset" class="form-control" />
                <span asp-validation-for="offset" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeasPointId" class="control-label">@SharedLocalizer.GetLocalizedHtmlString(@Html.DisplayNameFor(Model => Model.MeasPointId))</label>
                @Html.DropDownListFor(m => m.MeasPointId, ViewData["MeasPointId"] as IEnumerable<SelectListItem>, 
                @SharedLocalizer.GetLocalizedHtmlString("Please Select Measurement Point"), new { style = "width:250px;height:40px;" })
</div>
            <div class="form-group">
                <label asp-for="starttime" class="control-label">@SharedLocalizer.GetLocalizedHtmlString(@Html.DisplayNameFor(Model => Model.starttime))</label>
                <input asp-for="starttime" class="form-control date-picker" onkeydown="return false" />
                <span asp-validation-for="starttime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@SharedLocalizer.GetLocalizedHtmlString("Create")" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("Back to List")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery-ui-timepicker-addon.min.js"></script>
    <script type="text/javascript">

        $(document).ready(function () {
            $(function () {
                $(".date-picker").datepicker({
                    changeMonth: true,
                    changeYear: true,
                    yearRange: "-10:+0",
                    dateFormat: 'dd-M-yy HH:mm',
                    controlType: 'select'
                    
                });

            });
        });

    </script>

}
