@model IEnumerable<MainOps.Models.Document>

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("Documents");
}

<h2>@SharedLocalizer.GetLocalizedHtmlString("Documents")</h2>

<table>
    <tr>

        <td>
            @if (!User.IsInRole("Guest"))
            {
            <form asp-action="Create" asp-controller="Documents" method="get">
            <button class="btn-hoelscher" type="submit">@SharedLocalizer.GetLocalizedHtmlString("Create new")</button>
            </form>
            }
        </td>
        <td style="margin-left:5px;">
            @SharedLocalizer.GetLocalizedHtmlString("Search:")
        </td>
        <td>
            <form asp-controller="Documents" asp-action="Combsearch">
                <table>
                    <tr>
                        <td>
                            <label>@SharedLocalizer.GetLocalizedHtmlString("Measurement Point"):</label>
                        </td>
                        <td>
                            @Html.DropDownList("filterchoice", ViewData["MeasPointId"] as IEnumerable<SelectListItem>, @SharedLocalizer.GetLocalizedHtmlString("All"), new { @class = "form-control" })
                        </td>
                    </tr>
                    <tr>
                        <td><label>@SharedLocalizer.GetLocalizedHtmlString("Project"):</label></td>
                        <td><select id="ProjectId" name="filterchoice2" class="form-control" asp-items="ViewBag.ProjectId">
                                <option value="@null">@SharedLocalizer.GetLocalizedHtmlString("All")</option>                            
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td><input id="search" type="text" name="searchstring" placeholder="@SharedLocalizer.GetLocalizedHtmlString("search..")" data-url="@Url.Action("AutoComplete","Documents")" /></td>
                        <td>
                            <button type="submit" class="btn-hoelscher">
                                <span class="glyphicon glyphicon-search"></span>
                            </button>
                        </td>
                    </tr>
                </table>
            </form>
        </td>
        <td>
            @if (!User.IsInRole("Guest")) { 
            <form asp-action="Index" asp-controller="DocumentTypes" method="get">
                <button class="btn-hoelscher" type="submit">@SharedLocalizer.GetLocalizedHtmlString("Document Types")</button>
            </form>
            }
        </td>
    </tr>
</table>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Project)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MeasPoint)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DocumentType.Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Project.Abbreviation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeasPoint.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(model => item.DocumentType.Type)
            </td>
            <td>
                <form asp-action="Details" asp-controller="Documents" asp-route-id="@item.Id" method="get" target="_blank">
                    <button class="btn-hoelscher" type="submit">@SharedLocalizer.GetLocalizedHtmlString("View")</button>
                </form>
                @if (!User.IsInRole("Guest"))
                {
                    <form asp-action="Edit" asp-controller="Documents" asp-route-id="@item.Id" method="get"><button class="btn-hoelscher" type="submit">@SharedLocalizer.GetLocalizedHtmlString("Edit")</button></form>
                    <form asp-action="Delete" asp-controller="Documents" asp-route-id="@item.Id" method="get"><button class="btn-hoelscher" type="submit">@SharedLocalizer.GetLocalizedHtmlString("Delete")</button></form>
                }
            </td>
        </tr>
}
    </tbody>
</table>
