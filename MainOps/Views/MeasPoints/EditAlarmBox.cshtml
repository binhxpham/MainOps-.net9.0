@model MainOps.Models.MeasPoint

<h4>@SharedLocalizer.GetLocalizedHtmlString("Edit Alarm Box")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditAlarmBox" method="post">
            @Html.HiddenFor(Model => Model.LoggerId)
            @Html.HiddenFor(Model => Model.MonitorTypeId)
            @Html.HiddenFor(Model => Model.LaborId)
            @Html.HiddenFor(Model => Model.Offset)
            @Html.HiddenFor(Model => Model.Coordx)
            @Html.HiddenFor(Model => Model.Coordy)
            @Html.HiddenFor(Model => Model.Coordz)
            @Html.HiddenFor(Model => Model.Lati)
            @Html.HiddenFor(Model => Model.Longi)
            @Html.HiddenFor(Model => Model.ScadaAddress)
            @Html.HiddenFor(Model => Model.MeasTypeId)
            @Html.HiddenFor(Model => Model.ScadaAddress)
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label">@SharedLocalizer.GetLocalizedHtmlString(@Html.DisplayNameFor(Model => Model.Name))</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label">@SharedLocalizer.GetLocalizedHtmlString(@Html.DisplayNameFor(Model => Model.Description))</label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoggerActive" class="control-label">@SharedLocalizer.GetLocalizedHtmlString(@Html.DisplayNameFor(Model => Model.LoggerActive))</label>
                <input asp-for="LoggerActive" class="form-control" />
                <span asp-validation-for="LoggerActive" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjectId" class="control-label">@SharedLocalizer.GetLocalizedHtmlString(@Html.DisplayNameFor(Model => Model.ProjectId))</label>
                <select asp-for="ProjectId" class="form-control" asp-items="ViewBag.ProjectId"></select>
                <span asp-validation-for="ProjectId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="@SharedLocalizer.GetLocalizedHtmlString("Save")" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="AllAlrmBoxes">@SharedLocalizer.GetLocalizedHtmlString("Back to List")</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
