
<h2>
    @SharedLocalizer.GetLocalizedHtmlString("Upload Measurement Points to a Project")
</h2>

<form asp-action="UploadLaborIDs" asp-controller="MeasPoints" enctype="multipart/form-data" method="post">
    <table style="width:50%;table-layout:fixed;">
        <tr>
            <td>
                <select name="ProjectId" id="ProjectId" asp-items="ViewBag.ProjectId" onchange="FillSubProjects();" style="width:100%;height:36px;">
                    <option value="">@SharedLocalizer.GetLocalizedHtmlString("Choose Project")</option>
                </select>
            </td>
        </tr>
        <tr>
            <td>
                <select name="SubProjectId" id="SubProjectId" asp-items="ViewBag.SubProjectId" style="width: 100%; height: 36px;">
                    <option value="">@SharedLocalizer.GetLocalizedHtmlString("Choose SubProject")</option>
                </select>
            </td>
        </tr>
        <tr>
            <td><input type="file" accept=".csv" name="files" style="width:100%;height:36px;" /></td>
        </tr>
        <tr>
            <td><button class="btn-hoelscher" style="width: 100%;height:36px;">@SharedLocalizer.GetLocalizedHtmlString("Upload")</button></td>
        </tr>
    </table>   
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script type="text/javascript">
        function FillSubProjects() {
            var ProjectId = $('#ProjectId').val();
            var url = '@Url.Action("GetSubProjectList", "SubProjects")';
            $.ajax({
                type: 'GET',
                url: url,
                dataType: 'json',
                data: { 'theId': ProjectId },
                success: function (data) {
                    if (data.length > 0) {
                        var s = '<option value="">Please Select SubProject</option>';
                        for (var prop in data) {
                            s += '<option value="' + data[prop]["id"] + '">' + data[prop]["name"] + '</option>';
                        }
                        $("#SubProjectId").html(s);
                    }
                    else {
                        var s = '<option value="">Please Select SubProject</option>';
                        $("#SubProjectId").html(s);
                    }
                }
            });
        }
    </script>
}
