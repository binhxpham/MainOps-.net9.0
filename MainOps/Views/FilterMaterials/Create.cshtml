@model MainOps.Models.WTPClasses.MainClasses.FilterMaterial


@{
    ViewData["Title"] = SharedLocalizer.GetLocalizedHtmlString("Create");
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#AddToList").click(function () {
            var contanames = document.getElementById("containput").value;
            if (contanames == "") {
                $('#containput').val($("#contalist option:selected").text());
            }
            else {
                var allvals = contanames + ',' + $("#contalist option:selected").text();
                $('#containput').val(allvals);
            }

        });
    });
</script>
<h2>@SharedLocalizer.GetLocalizedHtmlString("Create")</h2>
<h4>@SharedLocalizer.GetLocalizedHtmlString("Filtermaterial")</h4>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <table>
                <tr>
                    <td>
                        <label asp-for="Name" class="control-label"></label>
                    </td>
                    <td>
                        <input asp-for="Name" class="form-control" />
                    </td>
                    <td>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="contaminations" class="control-label"></label>
                    </td>
                    <td>
                        <input asp-for="contaminations" class="form-control" id="containput" />
                    </td>
                    <td>
                        <span asp-validation-for="contaminations" class="text-danger"></span>
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.DropDownList("contachosen", ViewData["contaminations"] as SelectList, SharedLocalizer.GetLocalizedHtmlString("Select Contaminations"), new { id = "contalist" })
                    </td>
                    <td>
                        <button class="btn btn-hoelscher" id="AddToList" type="button">@Localizer["Add Contamination"]</button>
                    </td>
                    <td></td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="device" class="control-label"></label>
                    </td>
                    <td>
                        @Html.DropDownListFor(model => model.device, ViewData["WTPblocknames"] as SelectList, SharedLocalizer.GetLocalizedHtmlString("-- Please Select --"), new { @class = "form-control" })
                    </td>
                    <td>
                        @Html.ValidationMessageFor(x => x.device, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <label asp-for="water_type.water_type" class="control-label"></label>
                    </td>
                    <td>
                        @Html.DropDownListFor(model => model.water_typeid, ViewData["water_types"] as SelectList, SharedLocalizer.GetLocalizedHtmlString("-- Please Select --"), new { @class = "form-control" })
                    </td>
                    <td>
                        @Html.ValidationMessageFor(x => x.water_typeid, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="@Localizer["Create"]" class="btn btn-hoelscher" />
                    </td>
                    <td>
                        <a asp-action="Index">@Localizer["Back to List"]</a>
                    </td>
                    <td></td>
                </tr>
            </table>
        </form>
    </div>
</div>